<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_person"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/person_mock" />

    <TextView
        android:id="@+id/textView_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Author Name"
        app:layout_constraintEnd_toEndOf="@+id/imageView_person"
        app:layout_constraintStart_toStartOf="@+id/imageView_person"
        app:layout_constraintTop_toBottomOf="@+id/imageView_person" />

    <TextView
        android:id="@+id/textView_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Film Name"
        app:layout_constraintEnd_toEndOf="@+id/textView_real_name"
        app:layout_constraintStart_toStartOf="@+id/textView_real_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_real_name" />
</androidx.constraintlayout.widget.ConstraintLayout>